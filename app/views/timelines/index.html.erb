<div class="home flex flex-direction justifyContent-center alignItems-center">
  <div>
    <% @timelines.each do |tl| %>
      <p class="txt-lrg"><%= tl.content %>  
      <% if current_user.id == tl.user_id %>
        <%= link_to "削除する", timeline_path(tl), class: "txt-med", method: :delete, data: { confirm: "削除しますか？" } %></p>
      <% end %>

      <p><%= tl.user.name %> <span class="txt-sml"><%= tl.created_at %></span></p>
    <% end %>
  </div>
  <div>
    <%= form_for(:tl, url: timelines_path) do |f| %>
      <%= f.text_field :content %>

      <%= f.submit "投稿" %>
    <% end %>
  </div>
</div>