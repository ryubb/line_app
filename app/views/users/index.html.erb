<ul>
  <% @users.each do |user| %>
  <li>
    <% if !current_user?(user) %>
      <%= user.name %> 
      <% if  !current_user.from_friend?(user) && !user.to_friend?(current_user) %>
        <%= form_for(current_user.from_user_friendships.build) do |f| %>
          <%= hidden_field_tag :to_user_id, user.id %>
          <%= f.submit "友達になる" %>
        <% end %>
      <% end %>
    <% end %>
  </li>
  <% end %>
</ul>